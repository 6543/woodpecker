{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "dist/checksums.txt", "label": "Checksums" },
          { "path": "dist/*.apk", "label": "APK packages" },
          { "path": "dist/*.deb", "label": "DEB packages" },
          { "path": "dist/*.rpm", "label": "RPM packages" },
          { "path": "dist/*.tar.gz", "label": "Archives" },
          { "path": "dist/*.zip", "label": "Archives" }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > ./woodpecker-version"
      }
    ]
  ]
}
