{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "dist/checksums.txt" },
          { "path": "dist/*.apk" },
          { "path": "dist/*.deb" },
          { "path": "dist/*.rpm" },
          { "path": "dist/*.tar.gz" },
          { "path": "dist/*.zip" }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "echo ${nextRelease.version} > ./woodpecker-version"
      }
    ]
  ]
}
